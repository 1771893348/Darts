<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <com.dart.wgw.view.DartTarget
            android:id="@+id/dart_target"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            app:wb_scale_short_color="@color/colorAccent"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_dart_round"
                android:text="随机"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_dart_move"
                android:text="飞镖"/>
    </LinearLayout>
